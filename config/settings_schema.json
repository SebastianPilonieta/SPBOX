[
  {
    "name": "theme_info",
    "theme_name": "SPBOX",
    "theme_version": "1.0.0",
    "theme_author": "SPILONIETA",
    "theme_support_email": "contact@spboxstore.com",
    "theme_documentation_url": "https://spboxstore.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 90,
        "unit": "px",
        "label": "Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#f8f8f8"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text",
            "default": "#383838"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Primary button",
            "default": "#383838"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Primary button text",
            "default": "#ffffff"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary button text",
            "default": "#383838"
          }
        ],
        "role": {
          "text": "text",
          "background": { "solid": "background" },
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "background",
          "links": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Header font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "default": 100,
        "unit": "%"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Body font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "default": 100,
        "unit": "%"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_grid_horizontal",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 8,
        "unit": "px",
        "label": "Grid spacing (horizontal)"
      },
      {
        "type": "range",
        "id": "spacing_grid_vertical",
        "min": 4,
        "max": 40,
        "step": 4,
        "default": 8,
        "unit": "px",
        "label": "Grid spacing (vertical)"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          { "value": "drawer", "label": "Drawer" },
          { "value": "notification", "label": "Notification" },
          { "value": "page", "label": "Page" }
        ],
        "default": "notification"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      }
    ]
  }
]
